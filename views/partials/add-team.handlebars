{{>header}}

<div class='container-fluid'>
  <form action='/add-team' method='post'>
  <div class="form-group">
    <label>Team Name:</label>
    <input type="text" class="form-control" name="teamName">
  </div>
  <div class="form-group">
    <label>City:</label>
    <input type="text" class="form-control" name="cityName">
  </div>
  <div class="form-group">
    <label>Sport:</label>
    <input type="text" class="form-control" name="sportName">
  </div>
  <div class="form-group">
    <label>League</label>
    <input type="text" class="form-control" name="leagueName">
  </div>
  <div class="form-group">
    <label>Payroll</label>
    <input type="text" class="form-control" name="payroll">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
</div>
